@model GameShareManager.Application.ViewModels.GameViewModel

@{
    ViewBag.Title = Language.Game_Details;
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@ViewBag.Title</h5>
                </div>

                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", disabled = true })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.CompanyId, new { @class = "control-label" })
                                @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control", disabled = "true"})
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="hr-line-dashed"></div>
                        </div>
                        <div class="col-md-12">
                            @Html.ActionLink(@Language.Back, "Index", null, new { @class = "btn btn-default" })
                            @Html.ActionLink(@Language.Edit, "Edit", new { Model.Id }, new { @class = "btn btn-primary" })

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>